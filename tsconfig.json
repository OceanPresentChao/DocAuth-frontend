{
  "include": [
    "env.d.ts",
    "*.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "DOM",
      "ESNext"
    ],
    "outDir": "dist",
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}